<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainback"

    tools:context=".MainActivity">

    <Button
        android:id="@+id/quickie"
        android:layout_width="153dp"
        android:layout_height="90dp"
        android:onClick="QuickAç"
        android:text="Ananı Aç"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goChildGirl"
        android:layout_width="113dp"
        android:layout_height="65dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="56dp"
        android:text="Kız Çocuk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goChildBoy"
        android:layout_width="113dp"
        android:layout_height="65dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="56dp"
        android:text="Erkek Çocuk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goMother"
        android:layout_width="113dp"
        android:layout_height="65dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="164dp"
        android:text="Anne"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goDad"
        android:layout_width="113dp"
        android:layout_height="65dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="164dp"
        android:text="Baba"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btVar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_bg6"
        android:padding="10dp"
        android:text="Get Weather"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.673" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="244dp"
        android:layout_height="129dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="72dp"
        android:fontFamily="sans-serif-black"
        android:text="İnternet bağlantınızı kontrol ediniz"
        android:textColor="#F6F8F5"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goMother" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="125dp"
        android:layout_height="93dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="28dp"
        android:src="@drawable/seffaf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goMother" />

</androidx.constraintlayout.widget.ConstraintLayout>